<%- include("header") -%>
    <div id="heading" class="box">
        <h1>
            <%= heading %>
        </h1>
    </div>

    <div class="box">
        <% if (newItem.length===0) {%>
            <div class="empty">
                <h2 style="text-align: center;">Your list is empty</h2>
            </div>
            <%}%>
    </div>

    <div class="box">
        <% for (let i=0; i < newItem.length; i++) { %>
            <div class="item">
                <input type="checkbox">
                <p>
                    <%= newItem[i] %>
                </p>
            </div>
            <%}%>

            <%let route = "/";%>
            <%if (heading === "Work List") {%>
                <%route = "/work";%>
            <%}%>
                <form class="item" action="<%= route%>" method="POST">
                    <input type="text" name="item" placeholder="Add New Item" autofocus autocomplete="off">
                    <button type="submit">+</button>
                </form>
    </div>
    <%- include("footer") -%>
